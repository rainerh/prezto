export DOTFILES=$HOME/.dotfiles

# reload zsh config
alias reload!='source ~/.zshrc'

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
# Source functions.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/functions.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/functions.zsh"
fi

# Base16 Shell
if [ -z "$THEME" ]; then
    export THEME="base16-atelierheath"
fi
if [ -z "$BACKGROUND" ]; then
    export BACKGROUND="dark"
fi

BASE16_SHELL="$DOTFILES/.config/base16-shell/$THEME.$BACKGROUND.sh"
# [[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
source $BASE16_SHELL

# Load local aliases if they exist
if [[ -s "${ZDOTDIT:-$HOME}/.aliases" ]]; then
  source "${ZDOTDIT:-$HOME}/.aliases"
fi


###############################################################################
# general aliases
###############################################################################
alias ll='ls -lGh'
alias l='ls -laGh'
alias lt='ls -ltGh'
alias md='mkdir -p'
alias hr='fc -RI' # read in history from other shells only when you need it
alias hs='pushd ~ && git add .zhistory && git commit -m ".zhistory" && popd' # commit shell history to source control
alias pop='popd'
alias vi='vim'
alias deploy-mvn-artifacts='mvn clean install javadoc:jar source:jar deploy'
if [[ "$OSTYPE" == darwin* ]]; then
    alias hibernateon="sudo pmset -a hibernatemode 7"
    alias hibernateoff="sudo pmset -a hibernatemode 0"
    alias tomcat_start='./bin/startup.sh;tail -F logs/catalina.out'
    alias jpda_start='export JPDA_ADDRESS=8000;export JPDA_TRANSPORT=dt_socket;./bin/catalina.sh jpda start;tail -F logs/catalina.out'
    alias sak2cookie='export JAVA_OPTS="$JAVA_OPTS -Dsakai.cookieName=SAKAI2SESSIONID"'
fi

alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias vlc='/Applications/VLC.app/Contents/MacOS/VLC --intf=rc'
alias pip-update="pip freeze --local | sed 's/==.*//' | xargs -I % pip install -U %"
alias nocomment="grep -v '^$\|^\s*\#'"

###############################################################################
# Functions
###############################################################################
update() {
    local brew='brew update; brew upgrade; brew cleanup'
    local gisty='gisty pull_all; gisty sync_delete'
    local gem='gem update'
    local pip='pip-update'
    pyenv shell 2.7.9
    eval "$brew;$gisty;$pip"
    pyenv shell 3.4.3
    eval "$gem;$pip"
}

# take
function take() {
 mkdir -p $1
 cd $1
}

function y() {
 cd ~/music
 youtube-dl --extract-audio --audio-format mp3 --audio-quality 0 $1
}

